<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".updateRecord.doctorRecord.doctor_record_add"
    android:background="@drawable/login_back"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/dark_green"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@android:color/white"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/carter_one"
            android:gravity="center|start"
            android:text="Add Daily routine"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="72dp"
            tools:layout_editor_absoluteY="10dp" />


    </androidx.appcompat.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Sum of all input must not greater than 24"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                />

            <EditText
                android:id="@+id/personal_record_daily_routine_sleep_time"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/box1"
                android:paddingStart="10dp"
                android:ems="10"
                android:hint="Sleep Time in hrs"
                android:inputType="number"
                android:textColor="@color/dark_green"
                />
            <EditText
                android:id="@+id/personal_record_daily_routine_reading_time"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/box1"
                android:paddingStart="10dp"
                android:ems="10"
                android:hint="Reading Time"
                android:inputType="number"
                android:textColor="@color/dark_green"
                />

            <EditText
                android:id="@+id/personal_record_daily_routine_working_time"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/box1"
                android:paddingStart="10dp"
                android:ems="10"
                android:hint="Working Time in hrs"
                android:inputType="number"
                android:textColor="@color/dark_green"
                />
            <EditText
                android:id="@+id/personal_record_daily_routine_exercise_time"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/box1"
                android:paddingStart="10dp"
                android:ems="10"
                android:hint="Exercise time in hrs"
                android:inputType="number"
                android:textColor="@color/dark_green"
                />

            <EditText
                android:id="@+id/personal_record_daily_routine_others_time"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/box1"
                android:paddingStart="10dp"
                android:ems="10"
                android:hint="Others time in hrs"
                android:inputType="number"
                android:textColor="@color/dark_green"
                />

            <Button
                android:id="@+id/personal_record_daily_routine_submit_button"
                android:layout_width="150dp"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content"
                android:text="ADD RECORD"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:background="@drawable/button4"
                />







            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"

                />




        </LinearLayout>


    </ScrollView>








</LinearLayout>