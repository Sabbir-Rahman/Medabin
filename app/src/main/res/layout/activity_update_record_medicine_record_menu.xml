<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/green_back"
    tools:context=".updateRecord.medicineRecord.update_record_medicine_record_menu">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/dark_green"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@android:color/white"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/carter_one"
            android:gravity="center|start"
            android:text="Medicine Record"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="72dp"
            tools:layout_editor_absoluteY="10dp" />


    </androidx.appcompat.widget.Toolbar>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:onClick="enterAddNewMedicine"
            >

            <ImageView
                android:id="@+id/update_record_medicine_menu_add_medicine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/add_medicine"
                />








        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:onClick="enterViewMedicine"
            >

            <ImageView
                android:id="@+id/update_record_medicine_menu_view_medicine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/view_medicine"
                />





        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            >

            <ImageView
                android:id="@+id/update_record_medicine_menu_update_medicine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/update_medicine"
                />








        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            >

            <ImageView
                android:id="@+id/update_record_medicine_menu_delete_medicine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/delete_medicine"
                />





        </LinearLayout>



    </LinearLayout>



</LinearLayout>