<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hospitalinfo.hospitalInfoVIew"
    android:background="@drawable/green_back"
    >


    <com.mancj.materialsearchbar.MaterialSearchBar
        android:layout_margin="8dp"
        android:id="@+id/search_bar_hospital_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mt_placeholder="Search Here by Hospital Name"
        app:mt_hintColor="@color/black"
        android:layout_alignParentTop="true"
        app:mt_hint="Search"
        app:mt_speechMode="false" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerSearchHospitalView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/search_bar_hospital_view"


        />

</RelativeLayout>